# Enable auto-installation of peer dependencies (e.g., plugins that require Svelte)
auto-install-peers=true

# Don't fail on unmet peer dependencies 
strict-peer-dependencies=false

# Create a more npm-like node_modules structure for better compatibility
shamefully-hoist=true

# Use hoisted links to improve performance and compatibility
node-linker=hoisted

# Enable caching to speed up installations
cache-dir=.pnpm-store

# Use strict node_modules structure
hoist-pattern[]="*"

# Verify dependency versions automatically before running commands
verify-store-integrity=true

# Use public registry by default
registry=https://registry.npmjs.org/

# Enforce pnpm usage
engine-strict=true

# Use the highest resolution mode
resolution-mode=highest

# Use a specific node version
use-node-version=20.11.1 