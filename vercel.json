{
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install",
  "framework": "sveltekit",
  "outputDirectory": ".svelte-kit/output",
  "trailingSlash": false,
  "cleanUrls": true,
  "git": {
    "deploymentEnabled": {
      "main": true,
      "RecoLanding": false
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/restaurantes", "dest": "restaurantes" },
    { "src": "/precios", "dest": "precios" },
    { "src": "/noticias", "dest": "noticias" },
    { "src": "/nosotros", "dest": "nosotros" },
    { 
      "src": "/(restaurantes|precios|noticias|nosotros)/(.*)", 
      "dest": "/$1.html" 
    },
    { "src": "/(.*)", "dest": "/" }
  ]
} 